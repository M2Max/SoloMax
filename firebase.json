{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ 
      {
        "source": "/",
        "destination": "/it/",
        "type": 301 
      }
    ],
    "rewrites": [
      {
        "source": "/en/",
        "destination": "/en.html"
      },
      {
        "source": "/it/",
        "destination": "/it.html"
      },
      {
        "source": "/en/blog",
        "destination": "/en/blog.html"
      },
      {
        "source": "/it/blog",
        "destination": "/it/blog.html"
      }
    ]
  }
}